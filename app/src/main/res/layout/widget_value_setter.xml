<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/spacing_normal"
              android:layout_marginStart="@dimen/spacing_normal"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/lblValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Value"/>

    <LinearLayout
        android:id="@+id/panelValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panelEdition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnValueDecrease"
            android:layout_width="@dimen/btn_value_setter"
            android:layout_height="@dimen/btn_value_setter"
            android:background="@drawable/fab_reject"
            android:text="@string/button_minus"/>

        <Button
            android:id="@+id/btnValueIncrease"
            android:layout_width="@dimen/btn_value_setter"
            android:layout_height="@dimen/btn_value_setter"
            android:background="@drawable/fab_accept"
            android:text="@string/button_plus"/>
    </LinearLayout>
</LinearLayout>