<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtPoolMental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center"
            android:text="@string/cat_mental"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_half"
            android:paddingBottom="@dimen/spacing_half"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:background="@drawable/bkgd_cat_panel">
            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueName="@string/attr_int"
                app:traitCategory="@string/cat_mental"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterWits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterInt"
                app:valueName="@string/attr_wits"
                app:traitCategory="@string/cat_mental"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterWits"
                app:valueName="@string/attr_res"
                app:traitCategory="@string/cat_mental"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtPoolPhysical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center"
            android:text="@string/cat_physical"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_half"
            android:paddingBottom="@dimen/spacing_half"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:background="@drawable/bkgd_cat_panel">

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterStr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueName="@string/attr_str"
                app:traitCategory="@string/cat_physical"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterDex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterStr"
                app:valueName="@string/attr_dex"
                app:traitCategory="@string/cat_physical"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterSta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterDex"
                app:valueName="@string/attr_sta"
                app:traitCategory="@string/cat_physical"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtPoolSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:layout_gravity="center"
            android:text="@string/cat_social"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_half"
            android:paddingBottom="@dimen/spacing_half"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:background="@drawable/bkgd_cat_panel">

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterPre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:valueName="@string/attr_pre"
                app:traitCategory="@string/cat_social"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterPre"
                app:valueName="@string/attr_man"
                app:traitCategory="@string/cat_social"
                />

            <view
                class="com.emi.nwodcombat.widgets.ValueSetterWidget"
                android:id="@+id/valueSetterCom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/valueSetterMan"
                app:valueName="@string/attr_com"
                app:traitCategory="@string/cat_social"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>